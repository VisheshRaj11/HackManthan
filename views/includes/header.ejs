<% 
const navLinks = [
    { href: "#", text: "Home" },
    { href: "#about", text: "About" },
    { href: "#services", text: "Services" },
    { href: "#contact", text: "Contact" },
    { href: "#login", text: "Login" },
    { href: "#signup", text: "Signup" },
]; 

// Your Clerk URLs - replace with your actual URLs from the Clerk Dashboard
const clerkSignInUrl = "https://wingsai.clerk.accounts.dev/sign-in?redirect_url=http://localhost:8080/";
const clerkSignUpUrl = "https://wingsai.clerk.accounts.dev/sign-up?redirect_url=http://localhost:8080/";
const clerkSignOutUrl = "https://wingsai.clerk.accounts.dev/sign-out?redirect_url=http://localhost:8080/";
%>

<header id="main-header" class="fixed top-0 left-0 w-full z-50 transition-all duration-300 ease-in-out">
    <nav class="container mx-auto flex items-center justify-between gap-12 p-2 py-3">
        <div class="text-3xl md:text-3xl font-bold text-white flex items-center gap-2">
          <img src="/wings.png" alt="wing" class="w-12">
          <a href="/" class="">Wings AI</a>
        </div>
        
        <div class="hidden md:flex items-center gap-6 font-semibold text-white">
            <ul class="flex items-center gap-6 md:text-lg">
                <% navLinks.forEach(link => { %>
                    <li>
                        <a href="<%= link.href %>" class="hover:text-orange-400 transition-colors pb-1 hover:border-b hover:border-orange-300"><%= link.text %></a>
                    </li>
                <% }) %>
            </ul>
        </div>

        <button id="menu-button" class="md:hidden p-2 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
    </nav>
</header>

<div id="side-panel" class="fixed top-0 right-0 h-full w-64 bg-gray-900/90 backdrop-blur-lg z-[60] transform translate-x-full transition-transform duration-300 ease-in-out">
    <div class="flex justify-end p-4">
        <button id="close-button" class="p-2 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>
</div>

<div id="overlay" class="fixed inset-0 bg-black/50 z-[55] hidden"></div>

<script>
    // Ensure this script runs only once
    if (!document.getElementById('main-header').dataset.initialized) {
        document.getElementById('main-header').dataset.initialized = 'true';

        const header = document.getElementById('main-header');
        const scrollClasses = ['bg-black/20', 'backdrop-blur-md', 'shadow-lg'];
        
        // Header scroll effect
        window.addEventListener('scroll', () => {
            if (header) {
                if (window.scrollY > 50) {
                    header.classList.add(...scrollClasses);
                } else {
                    header.classList.remove(...scrollClasses);
                }
            }
        });

        // Side panel logic
        const menuButton = document.getElementById('menu-button');
        const closeButton = document.getElementById('close-button');
        const sidePanel = document.getElementById('side-panel');
        const overlay = document.getElementById('overlay');

        function openMenu() {
            if (sidePanel && overlay) {
                sidePanel.classList.remove('translate-x-full');
                overlay.classList.remove('hidden');
            }
        }

        function closeMenu() {
            if (sidePanel && overlay) {
                sidePanel.classList.add('translate-x-full');
                overlay.classList.add('hidden');
            }
        }

        if (menuButton) menuButton.addEventListener('click', openMenu);
        if (closeButton) closeButton.addEventListener('click', closeMenu);
        if (overlay) overlay.addEventListener('click', closeMenu);
    }
</script>
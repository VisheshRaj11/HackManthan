<% layout("layouts/boilerplate") %>

<div class="bg-gray-900 min-h-screen flex items-center justify-center">

    <div class="bg-gray-800 rounded-2xl shadow-lg p-8 w-full max-w-md text-white">
        <!-- Profile Photo -->
       <div class="flex justify-center mb-6">
    <img 
        src="<%= user?.imageUrl || `https://placehold.co/128x128/7c3aed/ffffff?text=${user?.username?.charAt(0).toUpperCase() || 'G'}` %>"  
        alt="Profile Photo" 
        class="w-32 h-32 rounded-full border-4 border-gray-700 object-cover"
    >
</div>


        <!-- Username -->
        <div class="text-center mb-2">
            <h1 class="text-2xl font-bold"><%= user?.username || 'Guest User' %></h1>
        </div>

        <!-- Email -->
        <div class="text-center mb-6">
            <p class="text-gray-300"><%= user?.email || 'guest@example.com' %></p>
        </div>

        <!-- Edit Profile Button -->
        <div class="flex justify-center">
            <a href="/edit-profile" class="px-6 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg font-medium transition-colors">
                Edit Profile
            </a>
        </div>
    </div>

</div>
